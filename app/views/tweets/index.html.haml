.row
  .col-sm-10
    %h4 Tweets
    - @tweets.each do |tweet|
      %hr
      %h5.tweet-heading
        = tweet.user.name
      %p.tweet-content
        .tweet-date
          = tweet.created_at.to_formatted_s(:short)
        .tweet-body
          = tweet.body
      %ul.actions
        %li
          = link_to 'Show', tweet
        %li
          = link_to 'Edit', edit_tweet_path(tweet)
        %li
          = link_to 'Delete', tweet, method: :delete, data: { confirm: 'You sure, Jimmy?' }

.row
  .col-sm-10
    = link_to 'New tweet', new_tweet_path
